<html>
  <head>

    <link rel="stylesheet" href="/BOOKERS/style.css">
    <title>Web CampBackendNew</title>

  </head>
<h1>Books</h1>
<table border="1">
  <tr>
  　<th>Title</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @books.each do |book| %>
<tr>
<td><%= book.title %></td>
<td><%= book.body %></td>
<td><%= link_to "Show", book_path(book) %></td>
<td><%= link_to "Edit", edit_book_path(book) %></td>
<td><%= link_to "Destroy", book_path(book), method: :delete %></td>

<% end %>

 </table>
<h2>New book</h2>

 <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <br>
    <%= message %>
  <% end %>
<% end %>


<br>
<!-- form_with部分 -->
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  <br>



  <%= f.submit 'Create Book' %>
<% end %>


</html>





